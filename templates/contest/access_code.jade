extends base
- load i18n

block media
    style.
        #access-code-form {
            margin: 50px auto 0;
            display: block;
            max-width: 500px;
        }

        #id_access_code {
            width: 100%;
        }

        .button-line {
            text-align: right;
        }

block body
    form#access-code-form.form-area(action='', method='post')
        - csrf_token
        if form.errors or wrong_code
            #form-errors
                p.error {% trans "Invalid access code." %}

        p {% trans "Please enter your access code:" %}
        p #{form.access_code}
        p.button-line: button(type='submit') {% trans "Join Contest" %}
